include variables.pug

doctype html
html(lang="ru")
  block variables
  head
    block head
      meta(charset="UTF-8")
      title #{pageTitle} | Импорт Гарант
      meta(name='viewport' content='width=device-width, initial-scale=1')
      //- meta(name='viewport' content='width=1320px, initial-scale=1')
      link(href="styles/main.min.css?v="+ versionFiles, rel="stylesheet")
      //- link(rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css")
      //- include blocks/favicons

  body
    div.wrapper#wrapper
      include blocks/header
      main.content(style=pageTitle!=='Главная'? 'display:flex': '')
        block content
          include blocks/crumbs
      include blocks/footer

    block scripts
      script(src="scripts/main.min.js?v=" + versionFiles defer)
